{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "lib": ["es2015"],
    "module": "es2015",
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["./packages/**/*.ts", "./packages/**/*.tsx"],
  "exclude": ["./packages/**/*.spec.ts", "./packages/**/*.spec.tsx"]
}
